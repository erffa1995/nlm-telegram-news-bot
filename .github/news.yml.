name: News Bot (EN)

on:
  workflow_dispatch:
  schedule:
    - cron: "*/10 * * * *"

jobs:
  news:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install requests feedparser

      - name: Debug env (shows only whether secrets exist)
        run: |
          python - <<'PY'
          import os
          print("NEWS_BOT_TOKEN set?:", bool(os.getenv("NEWS_BOT_TOKEN")))
          print("NEWS_CHANNEL set?:", bool(os.getenv("NEWS_CHANNEL")))
          PY
        env:
          NEWS_BOT_TOKEN: ${{ secrets.NEWS_BOT_TOKEN }}
          NEWS_CHANNEL: ${{ secrets.NEWS_CHANNEL }}

      - name: Run bot.py
        env:
          NEWS_BOT_TOKEN: ${{ secrets.NEWS_BOT_TOKEN }}
          NEWS_CHANNEL: ${{ secrets.NEWS_CHANNEL }}
        run: |
          python bot.py
